set editing-mode emacs
set completion-ignore-case on
set horizontal-scroll-mode off

# Allow Unicode
set meta-flag on
set input-meta on
set output-meta on
set convert-meta off

# mappings for Ctrl-left-arrow and Ctrl-right-arrow for word moving
"\e[1;5C": forward-word
"\e[1;5D": backward-word
"\e[5C":   forward-word
"\e[5D":   backward-word
"\e\e[C": forward-word
"\e\e[D": backward-word
